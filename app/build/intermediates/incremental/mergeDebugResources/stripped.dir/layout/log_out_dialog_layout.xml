<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/rounded_background_alert_dialog"
	>

	<TextView
		android:id="@+id/dialog_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fontFamily="@font/roboto_medium"
		android:text="@string/log_out"
		android:textColor="@color/toolbar_text_login"
		android:textSize="20sp"
		android:layout_marginStart="@dimen/margin_left_project"
		android:layout_marginEnd="@dimen/margin_right_project"
		android:layout_marginTop="@dimen/margin_top_project"
		android:layout_marginBottom="18dp"
		/>

	<TextView
		android:id="@+id/dialog_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAlignment="viewStart"
		android:text="@string/alert_dialog_text"
		android:textColor="@color/alert_dialog_text_color"
		android:textSize="16sp"
		android:letterSpacing="0.03"
		android:lineSpacingExtra="16sp"
		android:fontFamily="sans-serif"
		android:layout_marginStart="@dimen/margin_left_project"
		android:layout_marginEnd="@dimen/margin_right_project"
		android:layout_marginBottom="24dp"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="right"
		android:layout_marginStart="@dimen/margin_left_project"
		android:layout_marginEnd="@dimen/margin_right_project"
		>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/background_color_alert_dialog"
			android:text="@string/cancel"
			android:textColor="@color/alert_dialog_button_text_color"
			android:fontFamily="@font/roboto_medium"
			android:textSize="14sp"
			style="?android:attr/borderlessButtonStyle"
			android:layout_marginBottom="12dp"
			/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/background_color_alert_dialog"
			android:text="@string/logout"
			android:textColor="@color/alert_dialog_button_text_color"
			android:fontFamily="@font/roboto_medium"
			android:textSize="14sp"
			android:layout_marginLeft="6dp"
			android:layout_marginBottom="12dp"
			style="?android:attr/borderlessButtonStyle"
			/>
	</LinearLayout>
</LinearLayout>
