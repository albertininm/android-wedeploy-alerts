<?xml version="1.0" encoding="utf-8"?>
                                                                   
	<LinearLayout
		android:id="@+id/project_item"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="18dp"
		android:layout_marginLeft="@dimen/margin_left_project"
		android:layout_marginRight="@dimen/margin_right_project"
		android:background="@drawable/layout_rounded_project_item"
		android:elevation="1.5dp"
		android:gravity="center_vertical"
		android:orientation="vertical"
		android:shadowRadius="3"
		android:stateListAnimator="@drawable/lift_on_touch"
		 android:tag="layout/row_layout_project_0" xmlns:android="http://schemas.android.com/apk/res/android">


		<TextView
			android:id="@+id/project_id_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="6dp"
			android:layout_marginLeft="@dimen/margin_content_item_project"
			android:layout_marginRight="@dimen/margin_content_item_project"
			android:layout_marginTop="@dimen/margin_content_item_project"
			android:fontFamily="@font/circular_std_black"
			android:gravity="left"
			android:hyphenationFrequency="none"
			android:text="ProjectID"
			android:textColor="@color/project_id_text_color"
			android:textSize="27sp"
			/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_content_item_project"
			android:layout_marginLeft="@dimen/margin_content_item_project"
			android:layout_marginRight="@dimen/margin_content_item_project"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			>

			<ImageView
				android:id="@+id/project_health_image_view"
				android:layout_width="@dimen/icon_healthy_height"
				android:layout_height="@dimen/icon_healthy_width"
				android:layout_marginRight="6dp"
				/>

			<TextView
				android:id="@+id/project_health_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/circular_std_book"
				android:textColor="@color/project_id_text_color"
				android:textSize="16sp"
				/>

		</LinearLayout>

	</LinearLayout>
         