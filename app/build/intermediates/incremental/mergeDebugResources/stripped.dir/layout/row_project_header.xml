<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="24dp"
	android:layout_marginTop="18dp"
	android:orientation="horizontal"
	>

	<LinearLayout
		android:id="@+id/projects_header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/margin_right_project"
		android:layout_marginStart="@dimen/margin_left_project"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		>

		<TextView
			android:id="@+id/project_text_header"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:fontFamily="@font/circular_std_black"
			android:text="@string/projects_header"
			android:textColor="@color/project_screen_text_color"
			android:textSize="41sp"
			/>

		<de.hdodenhof.circleimageview.CircleImageView
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:id="@+id/profile_image"
			android:layout_width="42dp"
			android:layout_height="42dp"
			app:civ_border_color="@color/hint_color"
			app:civ_border_width="1dp"
			/>
	</LinearLayout>

</LinearLayout>